{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:content-schema:v2",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "content": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["items"]
    }
  },
  "required": ["content"],
  "$defs": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "integer", "minimum": 1 },
        "title": { "type": "string", "minLength": 1 },
        "sort": { "type": "integer" },
        "pageUrls": {
          "type": "array",
          "items": { "$ref": "#/$defs/url" },
          "uniqueItems": true
        },
        "blocks": {
          "type": "array",
          "minItems": 0,
          "items": { "$ref": "#/$defs/block" }
        }
      },
      "required": ["blocks", "id", "pageUrls", "sort", "title"]
    },
    "block": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "integer", "minimum": 1 },
        "sort": { "type": "integer" },
        "type": { "type": "string", "minLength": 1 },
        "required": { "type": "boolean" },
        "question": { "type": "string" },
        "payload": { "type": "object" },
        "settings": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "role": { "type": ["string", "null"] },
            "rules": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "validationExp": { "type": ["string", "null"] },
                "validationText": { "type": ["string", "null"] }
              },
              "required": ["validationExp", "validationText"]
            },
            "placeholder": { "type": ["string", "null"] }
          },
          "required": ["rules"]
        }
      },
      "required": ["id", "payload", "question", "required", "settings", "sort", "type"],
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "text" } }, "required": ["type"] },
          "then": {
            "properties": {
              "payload": {
                "type": "object",
                "properties": {
                  "maxLength": { "type": "integer", "minimum": 1 }
                },
                "required": ["maxLength"]
              }
            }
          }
        }
      ]
    }
  }
}
