{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product API Response - Version 1",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-f0-9]{24}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 1000
        },
        "price": {
          "type": "object",
          "properties": {
            "amount": {
              "type": "number",
              "minimum": 0
            },
            "currency": {
              "type": "string",
              "enum": ["USD", "EUR", "GBP"]
            }
          },
          "required": ["amount", "currency"]
        },
        "category": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "slug": {
              "type": "string"
            }
          },
          "required": ["id", "name"]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "availability": {
          "type": "object",
          "properties": {
            "inStock": {
              "type": "boolean"
            },
            "quantity": {
              "type": "integer",
              "minimum": 0
            },
            "reservedQuantity": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["inStock", "quantity"]
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "alt": {
                "type": "string"
              },
              "width": {
                "type": "integer",
                "minimum": 1
              },
              "height": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": ["url"]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "name", "price", "category", "availability", "createdAt", "updatedAt"]
    },
    "meta": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "enum": ["1.0"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["version", "timestamp"]
    }
  },
  "required": ["data", "meta"],
  "additionalProperties": false
}
